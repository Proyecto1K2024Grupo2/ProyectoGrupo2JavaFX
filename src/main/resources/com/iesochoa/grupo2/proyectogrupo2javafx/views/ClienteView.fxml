<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.iesochoa.grupo2.proyectogrupo2javafx.Controller.ClienteController">

    <left>
        <VBox prefWidth="204.0" spacing="10.0" style="-fx-background-color: #e0e0e0;" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="15.0"/>
            </padding>
            <children>
                <Button fx:id="empleadosButton" maxWidth="Infinity" onAction="#onClickEmpleados" text="Empleados"/>
                <Button fx:id="clientesButton" maxWidth="Infinity" onAction="#onClickClientes" text="Clientes"/>
                <Button fx:id="citasButton" maxWidth="Infinity" onAction="#onClickCitas" text="Citas"/>
                <Button fx:id="historialButton" maxWidth="Infinity" onAction="#onClickHistorial" text="Historial"/>
                <Button fx:id="tratamientoButton" maxWidth="Infinity" onAction="#onClickTratamiento"
                        text="Tratamiento"/>
                <Button fx:id="centroButton" maxWidth="Infinity" onAction="#onClickCentro" text="Centro"/>
            </children>
        </VBox>
    </left>

    <center>
        <VBox prefHeight="720.0" prefWidth="1076.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #ffffff;">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                    </padding>
                    <children>
                        <Label style="-fx-font-size: 1.5em; -fx-font-weight: bold;" text="Buscar Cliente"/>
                        <TextField fx:id="searchCliente" promptText="Buscar..."/>
                        <Button fx:id="buscarClienteButton" mnemonicParsing="false" text="Buscar"/>
                    </children>
                    <children>
                        <Label style="-fx-font-size: 1.5em; -fx-font-weight: bold;" text="Buscar Animal"/>
                        <TextField fx:id="searchAnimal" promptText="Buscar..."/>
                        <Button fx:id="buscarAnimalButton" mnemonicParsing="false" text="Buscar"/>
                    </children>
                </HBox>

                <HBox prefHeight="329.0" prefWidth="1076.0">
                    <children>
                        <!-- Cliente -->
                        <GridPane hgap="10.0" prefHeight="329.0" prefWidth="538.0" vgap="15.0" HBox.hgrow="ALWAYS">
                            <columnConstraints>
                                <ColumnConstraints hgrow="NEVER" minWidth="80.0" prefWidth="80.0"/>
                                <ColumnConstraints hgrow="ALWAYS" minWidth="100.0" prefWidth="200.0"/>
                                <ColumnConstraints hgrow="NEVER" minWidth="80.0" prefWidth="80.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                            </rowConstraints>
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="10.0"/>
                            </padding>
                            <children>
                                <Label style="-fx-font-size: 1.5em; -fx-font-weight: bold;" text="Cliente"
                                       GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                                <Label text="Nombre" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                                <TextField fx:id="nombreTextField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                <Label text="Apellido 1" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                                <TextField fx:id="apellido1TextField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                                <Label text="Apellido 2" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                                <TextField fx:id="apellido2TextField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                                <Label text="DNI" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                                <TextField fx:id="dniTextField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                                <Label text="TelÃ©fono" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                                <TextField fx:id="telefonoTextField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                                <Button fx:id="actualizarClienteButton" mnemonicParsing="false"
                                        onAction="#onActualizarCliente" text="Actualizar" GridPane.columnIndex="2"
                                        GridPane.rowIndex="1"/>
                                <Button fx:id="eliminarClienteButton" mnemonicParsing="false"
                                        onAction="#onEliminarCliente" text="Eliminar" GridPane.columnIndex="2"
                                        GridPane.rowIndex="2"/>
                                <Button fx:id="crearClienteButton" mnemonicParsing="false" onAction="#onCrearCliente"
                                        text="Crear" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
                            </children>
                        </GridPane>

                        <!-- Mascota -->
                        <GridPane hgap="10.0" prefHeight="329.0" prefWidth="538.0" vgap="15.0" HBox.hgrow="ALWAYS">
                            <columnConstraints>
                                <ColumnConstraints hgrow="NEVER" minWidth="80.0" prefWidth="80.0"/>
                                <ColumnConstraints hgrow="ALWAYS" minWidth="100.0" prefWidth="200.0"/>
                                <ColumnConstraints hgrow="NEVER" minWidth="80.0" prefWidth="80.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                            </rowConstraints>
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="10.0"/>
                            </padding>
                            <children>
                                <Label style="-fx-font-size: 1.5em; -fx-font-weight: bold;" text="Animal"
                                       GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                                <Label text="Id" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                                <TextField fx:id="idMascotaTextField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                <Label text="DNI Cliente" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                                <TextField fx:id="dniClienteMascotaTextField" GridPane.columnIndex="1"
                                           GridPane.rowIndex="2"/>
                                <Label text="Nombre" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                                <TextField fx:id="nombreMascotaTextField" GridPane.columnIndex="1"
                                           GridPane.rowIndex="3"/>
                                <Label text="Raza" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                                <TextField fx:id="razaMascotaTextField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                                <Label text="Especie" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                                <TextField fx:id="especieMascotaTextField" GridPane.columnIndex="1"
                                           GridPane.rowIndex="5"/>
                                <Label text="Edad" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                                <TextField fx:id="edadMascotaTextField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                                <Button fx:id="actualizarMascotaButton" mnemonicParsing="false"
                                        onAction="#onActualizarMascota" text="Actualizar" GridPane.columnIndex="2"
                                        GridPane.rowIndex="1"/>
                                <Button fx:id="eliminarMascotaButton" mnemonicParsing="false"
                                        onAction="#onEliminarMascota" text="Eliminar" GridPane.columnIndex="2"
                                        GridPane.rowIndex="2"/>
                                <Button fx:id="crearMascotaButton" mnemonicParsing="false" onAction="#onCrearMascota"
                                        text="Crear" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
                            </children>
                        </GridPane>
                    </children>
                </HBox>

                <!-- Listado de Mascotas -->
                <ScrollPane fitToWidth="true" prefHeight="388.0">
                    <content>
                        <TextArea fx:id="resultadoDeBusquedaTextArea" editable="false" prefHeight="350.0"
                                  prefWidth="1061.0" style="-fx-font-size: 1.1em; -fx-padding: 10;" wrapText="true">
                            <padding>
                                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
                            </padding>
                        </TextArea>
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </center>
</BorderPane>
