<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<BorderPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.iesochoa.grupo2.proyectogrupo2javafx.Controller.EmpleadosController">
    <left>
        <VBox prefWidth="204.0" spacing="10.0" style="-fx-background-color: #e0e0e0;" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="15.0"/>
            </padding>
            <children>
                <Button fx:id="empleadosButton" maxWidth="Infinity" onAction="#onClickEmpleados" text="Empleados"/>
                <Button fx:id="clientesButton" maxWidth="Infinity" onAction="#onClickClientes" text="Clientes"/>
                <Button fx:id="citasButton" maxWidth="Infinity" onAction="#onClickCitas" text="Citas"/>
                <Button fx:id="historialButton" maxWidth="Infinity" onAction="#onClickHistorial" text="Historial"/>
                <Button fx:id="tratamientoButton" maxWidth="Infinity" onAction="#onClickTratamiento"
                        text="Tratamiento"/>
                <Button fx:id="centroButton" maxWidth="Infinity" onAction="#onClickCentro" text="Centro"/>
            </children>
        </VBox>
    </left>
    <center>
        <HBox prefHeight="720.0" prefWidth="1076.0" BorderPane.alignment="CENTER">
            <children>
                <VBox prefHeight="720.0" prefWidth="360.0" style="-fx-background-color: #f0f0f0;">
                    <children>
                        <Label style="-fx-font-size: 1.5em; -fx-font-weight: bold;" text="Info Empleado">
                            <padding>
                                <Insets bottom="10.0" left="20.0" top="20.0"/>
                            </padding>
                        </Label>
                        <GridPane hgap="10.0" vgap="15.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="NEVER" minWidth="80.0" prefWidth="80.0"/>
                                <ColumnConstraints hgrow="ALWAYS" minWidth="100.0" prefWidth="200.0"/>
                            </columnConstraints>
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="10.0"/>
                            </padding>
                            <children>
                                <Label text="Nombre" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                                <TextField fx:id="nombreTextField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                                <Label text="Teléfono" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                                <TextField fx:id="telefonoTextField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                <Label text="DNI" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                                <TextField fx:id="dniTextField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                                <Label text="Sueldo" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                                <TextField fx:id="sueldoTextField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                                <Label text="Núm Cuenta" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                                <TextField fx:id="numeroCuentaTextField" GridPane.columnIndex="1"
                                           GridPane.rowIndex="5"/>
                                <Label text="Tipo empleado" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                                <ComboBox fx:id="tipoEmpleadoComboBox" GridPane.columnIndex="1" GridPane.rowIndex="6">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="Cirujano"/>
                                            <String fx:value="Cuidador"/>
                                            <String fx:value="Recepcionista"/>
                                            <String fx:value="Veterinario"/>
                                        </FXCollections>
                                    </items>
                                </ComboBox>

                            </children>
                            <rowConstraints>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                            </rowConstraints>
                        </GridPane>
                        <HBox alignment="CENTER" spacing="20.0">
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="10.0"/>
                            </padding>
                            <children>
                                <Button fx:id="eliminarButton" mnemonicParsing="false"
                                        onAction="#onClickEliminarEmpleado" text="Eliminar"/>
                                <Button fx:id="crearButton" mnemonicParsing="false" onAction="#onClickCrearEmpleado"
                                        text="Crear"/>
                                <Button fx:id="actualizarButton" mnemonicParsing="false"
                                        onAction="#onClickActualizarEmpleado" text="Actualizar"/>
                            </children>
                        </HBox>
                        <TextArea fx:id="errorTextArea" editable="false" prefHeight="329.0" prefWidth="360.0"/>
                    </children>
                </VBox>
                <VBox prefHeight="720.0" prefWidth="716.0">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #ffffff;">
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                            </padding>
                            <children>
                                <Label style="-fx-font-size: 1.5em; -fx-font-weight: bold;" text="Listado empleados"/>
                                <TextField fx:id="searchTextField" onAction="#onClickBuscarEmpleado"
                                           promptText="Search..."/>
                                <Button fx:id="buscarButton" mnemonicParsing="false" onAction="#onClickBuscar"
                                        text="Buscar"/>
                            </children>
                        </HBox>
                        <TableView fx:id="empleadosTable" prefHeight="656.0" prefWidth="716.0">
                            <columns>
                                <TableColumn fx:id="colDni" prefWidth="116.0" text="DNI">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="dni"/>
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn fx:id="colNombre" prefWidth="131.20001220703125" text="Nombre">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="nombre"/>
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn fx:id="colTelefono" prefWidth="135.199951171875" text="Teléfono">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="telefono"/>
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn fx:id="colNumCuenta" prefWidth="193.60003662109375"
                                             text="Número de Cuenta">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="numCuenta"/>
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn fx:id="colSueldo" prefWidth="140.79998779296875" text="Sueldo">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="sueldo"/>
                                    </cellValueFactory>
                                </TableColumn>
                            </columns>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </HBox>
    </center>
</BorderPane>
